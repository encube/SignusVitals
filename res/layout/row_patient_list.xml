<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:paddingBottom="6dp" >

    <TextView
        android:id="@+id/patient_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="6dip"
        android:text="Novo Dimaporo"
        android:textColor="#2b749e"
        android:textSize="16sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/bed_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/patient_name"
        android:layout_marginLeft="5dip"
        android:text="Room: "
        android:textColor="#343434"
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bed_text_view"
        android:layout_marginLeft="5dip"
        android:text="Admission date: "
        android:textColor="#343434"
        android:textSize="12sp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/diagnosis_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/date_text_view"
        android:layout_marginLeft="5dip"
        android:text="Diagnosis: "
        android:textColor="#343434"
        android:textSize="12sp"
        android:typeface="sans" />

    <LinearLayout
        android:id="@+id/indicators"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/assessment_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/normal_bg"
            android:gravity="center_horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="ABNORMAL"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monitoring_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/critical_bg"
            android:gravity="center_horizontal"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="UNMONITORED"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/indicators"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/vs_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_selector"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="VS Record"
            android:textColor="#777777"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>